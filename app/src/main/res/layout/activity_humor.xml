<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="visible">

    <data>

        <variable
            name="viewModel"
            type="com.ufrj.escalaiv2.viewmodel.HumorVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context="com.ufrj.escalaiv2.activity.HumorActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/md_theme_light_primaryContainer"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:title="Humor" />
        </com.google.android.material.appbar.AppBarLayout>


        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Como está seu humor?"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topAppBar" />

        <!-- ScrollView para conter todos os sliders -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@id/saveButton"
            app:layout_constraintTop_toBottomOf="@id/titleText">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintGuide_percent="0.36" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintGuide_percent="0.63" />


                <!-- 1. ALEGRIA -->
                <!-- Container para o label "Alegria" e seu valor -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/joyLabelContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/joyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alegria"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/joyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(viewModel.joyText)}"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Slider para seleção de humor - Alegria -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/joySlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:stepSize="1"
                    android:value="@{viewModel.joyLevel}"
                    android:valueFrom="0"
                    android:valueTo="3"
                    app:labelBehavior="gone"
                    app:layout_constraintTop_toBottomOf="@id/joyLabelContainer"
                    app:tickVisible="true" />

                <!-- Labels para os valores do slider - Alegria -->
                <TextView
                    android:id="@+id/sliderLabelNada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Nada Alegre"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/joySlider" />

                <TextView
                    android:id="@+id/sliderLabelPouco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pouco"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintStart_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toBottomOf="@id/joySlider" />

                <TextView
                    android:id="@+id/sliderLabelAlegre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Normal"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline2"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/joySlider" />

                <TextView
                    android:id="@+id/sliderLabelMuito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="Muito Alegre"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/joySlider" />

                <!-- 2. TRISTEZA -->
                <!-- Container para o label "Tristeza" e seu valor -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sadnessLabelContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/sliderLabelPouco">

                    <TextView
                        android:id="@+id/sadnessLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tristeza"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/sadnessValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.sadnessText}"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Slider para seleção de humor - Tristeza -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/sadnessSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:stepSize="1"
                    android:value="@{viewModel.sadnessLevel}"
                    android:valueFrom="0"
                    android:valueTo="3"
                    app:labelBehavior="gone"
                    app:layout_constraintTop_toBottomOf="@id/sadnessLabelContainer"
                    app:tickVisible="true" />

                <!-- Labels para os valores do slider - Tristeza -->
                <TextView
                    android:id="@+id/sadnessLabelNada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Nada Triste"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sadnessSlider" />

                <TextView
                    android:id="@+id/sadnessLabelPouco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pouco"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintStart_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toBottomOf="@id/sadnessSlider" />

                <TextView
                    android:id="@+id/sadnessLabelNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Normal"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline2"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/sadnessSlider" />

                <TextView
                    android:id="@+id/sadnessLabelMuito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="Muito Triste"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/sadnessSlider" />

                <!-- 3. ANSIEDADE -->
                <!-- Container para o label "Ansiedade" e seu valor -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/anxietyLabelContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/sadnessLabelPouco">

                    <TextView
                        android:id="@+id/anxietyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ansiedade"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/anxietyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.anxietyText}"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Slider para seleção de humor - Ansiedade -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/anxietySlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:stepSize="1"
                    android:value="@{viewModel.anxietyLevel}"
                    android:valueFrom="0"
                    android:valueTo="3"
                    app:labelBehavior="gone"
                    app:layout_constraintTop_toBottomOf="@id/anxietyLabelContainer"
                    app:tickVisible="true" />

                <!-- Labels para os valores do slider - Ansiedade -->
                <TextView
                    android:id="@+id/anxietyLabelNada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Nada Ansioso"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/anxietySlider" />

                <TextView
                    android:id="@+id/anxietyLabelPouco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pouco"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintStart_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toBottomOf="@id/anxietySlider" />

                <TextView
                    android:id="@+id/anxietyLabelNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Normal"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline2"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/anxietySlider" />

                <TextView
                    android:id="@+id/anxietyLabelMuito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="Muito Ansioso"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/anxietySlider" />

                <!-- 4. ESTRESSE/RAIVA -->
                <!-- Container para o label "Estresse/Raiva" e seu valor -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/stressLabelContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/anxietyLabelPouco">

                    <TextView
                        android:id="@+id/stressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estresse"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/stressValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.stressText}"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Slider para seleção de humor - Estresse/Raiva -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/stressSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:stepSize="1"
                    android:value="@{viewModel.stressLevel}"
                    android:valueFrom="0"
                    android:valueTo="3"
                    app:labelBehavior="gone"
                    app:layout_constraintTop_toBottomOf="@id/stressLabelContainer"
                    app:tickVisible="true" />

                <!-- Labels para os valores do slider - Estresse/Raiva -->
                <TextView
                    android:id="@+id/stressLabelNada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Nada Estressado"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stressSlider" />

                <TextView
                    android:id="@+id/stressLabelPouco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pouco"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintStart_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toBottomOf="@id/stressSlider" />

                <TextView
                    android:id="@+id/stressLabelNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Normal"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline2"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/stressSlider" />

                <TextView
                    android:id="@+id/stressLabelMuito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="Muito Estressado"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/stressSlider" />

                <!-- 5. CALMA -->
                <!-- Container para o label "Calma" e seu valor -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/calmLabelContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/stressLabelPouco">

                    <TextView
                        android:id="@+id/calmLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calma"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/calmValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.calmText}"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Slider para seleção de humor - Calma -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/calmSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:stepSize="1"
                    android:value="@{viewModel.calmLevel}"
                    android:valueFrom="0"
                    android:valueTo="3"
                    app:labelBehavior="gone"
                    app:layout_constraintTop_toBottomOf="@id/calmLabelContainer"
                    app:tickVisible="true" />

                <!-- Labels para os valores do slider - Calma -->
                <TextView
                    android:id="@+id/calmLabelNada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Nada Calmo"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/calmSlider" />

                <TextView
                    android:id="@+id/calmLabelPouco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pouco"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline1"
                    app:layout_constraintStart_toEndOf="@id/guideline1"
                    app:layout_constraintTop_toBottomOf="@id/calmSlider" />

                <TextView
                    android:id="@+id/calmLabelNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Normal"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline2"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/calmSlider" />

                <TextView
                    android:id="@+id/calmLabelMuito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="32dp"
                    android:text="Muito Calmo"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/guideline2"
                    app:layout_constraintTop_toBottomOf="@id/calmSlider" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <!-- Botão para salvar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:padding="12dp"
            android:text="Salvar"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>