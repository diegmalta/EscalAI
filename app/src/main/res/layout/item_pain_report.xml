<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvLocalDor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Local"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvTempoDesdeInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Início"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvIntensidadeMaxima"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Máx"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvIntensidadeMedia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Média"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvTempoSemDor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sem Dor"
        android:gravity="center"
        android:textSize="12sp" />

</LinearLayout>
