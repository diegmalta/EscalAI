<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
         <variable name="viewModel" type="com.ufrj.escalaiv2.viewmodel.RelatoriosVM" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.RelatoriosFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.Material3.Toolbar.OnSurface"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Relatórios" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Gráfico de Água -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_agua"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Água Consumida (Últimos 7 dias)" /> <!-- Considere usar @string/relatorio_agua_titulo -->

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_agua"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Gráfico de Sono -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_sono"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duração do Sono (Últimos 7 dias)" /> <!-- Considere usar @string/relatorio_sono_titulo -->

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_sono"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Gráfico de Dores -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_dor"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intensidade da Dor (Últimos 7 dias)" /> <!-- Considere usar @string/relatorio_dor_titulo -->

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_dor"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Gráfico de Treinos -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_treino"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duração dos Treinos (Últimos 7 dias)" /> <!-- Considere usar @string/relatorio_treino_titulo -->

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart_treino"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Gráfico de Humor -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_humor"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            style="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Níveis de Humor (Últimos 7 dias)" /> <!-- Considere usar @string/relatorio_humor_titulo -->

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_humor"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
