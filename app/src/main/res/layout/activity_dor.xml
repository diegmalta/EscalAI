<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.ufrj.escalaiv2.viewmodel.DorVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context="com.ufrj.escalaiv2.activity.DorActivity"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/md_theme_light_primaryContainer"
                app:title="Avaliação de Dor"
                app:navigationIcon="@drawable/ic_arrow_back"/>
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Como está sua dor hoje?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/topAppBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintBottom_toTopOf="@id/saveButton">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Área Dropdown -->
                <TextView
                    android:id="@+id/areaLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Área da dor"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/areaDropdownLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Selecione a área"
                    app:layout_constraintTop_toBottomOf="@id/areaLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/areaDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:text="@{viewModel.selectedAreaText}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Subárea Dropdown -->
                <TextView
                    android:id="@+id/subareaLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Membro da dor"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/areaDropdownLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/subareaDropdownLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Selecione o membro"
                    android:enabled="@{viewModel.subareaEnabled}"
                    app:layout_constraintTop_toBottomOf="@id/subareaLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/subareaDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:text="@{viewModel.selectedSubareaText}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Especificação Dropdown -->
                <TextView
                    android:id="@+id/especificacaoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Especifique:"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/subareaDropdownLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/especificacaoDropdownLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Selecione"
                    android:enabled="@{viewModel.especificacaoEnabled}"
                    app:layout_constraintTop_toBottomOf="@id/especificacaoLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/especificacaoDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:text="@{viewModel.selectedEspecificacaoText}"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Intensidade da Dor (Slider) -->
                <TextView
                    android:id="@+id/intensidadeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intensidade da Dor"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/especificacaoDropdownLayout"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/intensidadeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(viewModel.intensidadeDor)}"
                    android:textSize="18sp"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/intensidadeLabel"
                    app:layout_constraintBottom_toBottomOf="@id/intensidadeLabel"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/intensidadeSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:valueFrom="1"
                    android:valueTo="10"
                    android:stepSize="1"
                    android:value="@{viewModel.intensidadeDor}"
                    app:tickVisible="true"
                    app:labelBehavior="floating"
                    app:layout_constraintTop_toBottomOf="@id/intensidadeLabel"/>

                <TextView
                    android:id="@+id/sliderLabelMinimo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/intensidadeSlider"/>

                <TextView
                    android:id="@+id/sliderLabelMaximo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/intensidadeSlider"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <!-- Botão para salvar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:padding="12dp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>