<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/md_theme_light_outline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header do Card (sempre visível) -->

        <!-- Conteúdo expandido (inicialmente invisível) -->
        <LinearLayout
            android:id="@+id/cardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Indicador de status (cor lateral) -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                tools:background="@color/md_theme_light_error" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Área da lesão -->
                <TextView
                    android:id="@+id/tvAreaLesao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Joelho direito" />

                <!-- Data da lesão -->
                <TextView
                    android:id="@+id/tvDataLesao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="12sp"
                    tools:text="JUN 2025" />

                <!-- Status atual -->
                <TextView
                    android:id="@+id/tvStatusAtual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="12sp"
                    tools:text="Em andamento" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <!-- Tempo atual -->
                <TextView
                    android:id="@+id/tvTempoAtual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_theme_light_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="15 dias" />

                <!-- Tempo previsto -->
                <TextView
                    android:id="@+id/tvTempoPrevisto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="12sp"
                    tools:text="Prev: sem previsão" />

                <!-- Seta de expansão -->
                <ImageView
                    android:id="@+id/ivExpandArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/baseline_arrow_drop_down_circle_24"
                    app:tint="@color/md_theme_light_onSurfaceVariant" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandedContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:animateLayoutChanges="true">

            <!-- Divisor -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_theme_light_outline"
                android:layout_marginHorizontal="16dp"/>

            <!-- Detalhes da lesão -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Informações básicas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalhes da Lesão"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diagnóstico: "
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"/>

                    <TextView
                        android:id="@+id/tvDiagnostico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_light_onSurface"
                        tools:text="Tendinite"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profissional: "
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"/>

                    <TextView
                        android:id="@+id/tvProfissional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_light_onSurface"
                        tools:text="Fisioterapeuta"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reincidência: "
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"/>

                    <TextView
                        android:id="@+id/tvReincidencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_light_onSurface"
                        tools:text="Não"/>

                </LinearLayout>

                <!-- Intervalo de Confiança -->
                <LinearLayout
                    android:id="@+id/intervaloConfiancaContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Previsão de Afastamento"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_theme_light_primary"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvIntervaloConfianca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_light_onSurface"
                        tools:text="Intervalo: 5.2 - 8.7 dias"/>

                </LinearLayout>

                <!-- Botões de ação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPreverTempo"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prever"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditarLesao"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConcluirLesao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Concluir"
                        tools:text="Concluir"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>